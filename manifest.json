{
  "manifest_version": 3,
  "name": "Gmail Message URL Copier",
  "version": "1.0",
  "description": "Copy permanent Gmail message URLs to clipboard",

  "browser_specific_settings": {
    "gecko": {
      "id": "gmail-url-copier@squirtgun.ca"
    }
  },

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "notifications"
  ],

  "host_permissions": [
    "*://mail.google.com/*"
  ],

  "action": {
    "default_title": "Copy Gmail Message URL",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}